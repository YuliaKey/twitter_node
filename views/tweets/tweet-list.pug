extends ../layout.pug

block content 
    .content
        .profile-container
            include ../includes/profile.pug 
        .tweets-container
            .tweets-list
                include ../includes/tweet-form.pug
                if tweets
                    each tweet in tweets
                        .tweet-card
                            .tweet-card-author 
                                img(src="/images/default_prifile.png", alt="")
                                p Yuliia Kolomiiets
                            .tweet-card-body= tweet.content
                            .tweet-card-actions 
                                i.fa-regular.fa-message 
                                i.fa-regular.fa-heart
                                i.fa-regular.fa-share-from-square
